<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil - Lab App 2FA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding-top: 50px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="container">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Mi Perfil</h2>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5>Información Personal</h5>
                                        <p><strong>Usuario:</strong> <%= user.username %></p>
                                        <p><strong>Email:</strong> <%= user.email %></p>
                                        <p><strong>Miembro desde:</strong> 
                                            <%= new Date(user.createdAt).toLocaleDateString('es-ES') %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5>Seguridad</h5>
                                        <p><strong>Autenticación de 2 Factores:</strong> 
                                            <span class="badge bg-<%= user.isTwoFactorEnabled ? 'success' : 'danger' %>">
                                                <%= user.isTwoFactorEnabled ? 'ACTIVADO' : 'DESACTIVADO' %>
                                            </span>
                                        </p>
                                        
                                        <% if (user.isTwoFactorEnabled) { %>
                                            <form action="/disable-2fa" method="POST">
                                                <button type="submit" class="btn btn-warning w-100 mt-2">
                                                    Desactivar 2FA
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <a href="/setup-2fa" class="btn btn-success w-100 mt-2">
                                                Activar 2FA
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-4">
                            <a href="/dashboard" class="btn btn-primary">Volver al Dashboard</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>